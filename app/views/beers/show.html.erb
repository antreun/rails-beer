<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= link_to @style.name, @style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
 <p>Beer has not yet been rated!</p>
<% else %>
<p>
	Has <%= pluralize(@beer.ratings.count, "rating") %>, 
	average <%= @beer.average_rating %>
</p>
<% end %>

<% if current_user %>

  <h4>Give a rating:</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit %>
  <% end %>
  <br />

  <%= link_to 'Edit', edit_beer_path(@beer) if current_user %>
  <%= link_to 'Destroy', beer_path, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>

<% end %>

<%= link_to 'Back', beers_path %>
